#!/bin/bash
# Git post-commit hook to automatically push changes to remote repository
# This hook runs after every successful commit

echo "Auto-pushing commit to remote repository..."

# Get current branch name
BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Push to remote
if git push origin "$BRANCH" 2>&1; then
    echo "Successfully pushed to origin/$BRANCH"
else
    echo "Warning: Failed to push to remote. You may need to push manually."
    echo "Run: git push origin $BRANCH"
fi
